<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/parent_padding"
    tools:context=".presentation.fragment.SearchFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_search_fragment"
        android:textStyle="italic"
        android:text="@string/city_from"
        android:textSize="@dimen/l_text_size" />

    <TextView
        android:id="@+id/cityFrom"
        style="@style/appTextViewStyle"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/city_from_hint" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="@string/city_to"
        android:textSize="@dimen/l_text_size" />

    <TextView
        android:id="@+id/cityTo"
        android:textAllCaps="true"
        style="@style/appTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/city_from_hint" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="@string/start_date"
        android:textSize="@dimen/l_text_size" />

    <TextView
        android:id="@+id/tvDate"
        style="@style/appTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/date_text_size"
        android:ems="8"/>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/btn_search"
        android:textAllCaps="false"
        android:textSize="@dimen/m_text_size" />

</LinearLayout>