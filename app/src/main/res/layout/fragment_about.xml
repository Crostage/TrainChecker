<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.AboutFragment">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="@dimen/about_image_size"
        android:layout_height="@dimen/about_image_size"
        android:layout_weight="1"
        android:src="@drawable/ic_information"
        android:contentDescription="@string/question_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/train_margin"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ems="15"
        android:layout_height="wrap_content"
        android:text="@string/app_description" />

</LinearLayout>